<%= form_for(@comment, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @comment.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h4>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :school, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :school, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :detail, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :detail, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :flag_count, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :flag_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :like_count, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :like_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unlike_count, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :unlike_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
