<div class="page-header">
  <%= link_to comments_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_comment_path(@comment), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show comment</h1>
</div>

<dl class="dl-horizontal">
  <dt>User:</dt>
  <dd><%= @comment.user %></dd>

  <dt>School:</dt>
  <dd><%= @comment.school %></dd>

  <dt>Detail:</dt>
  <dd><%= @comment.detail %></dd>

  <dt>Flag count:</dt>
  <dd><%= @comment.flag_count %></dd>

  <dt>Like count:</dt>
  <dd><%= @comment.like_count %></dd>

  <dt>Unlike count:</dt>
  <dd><%= @comment.unlike_count %></dd>

</dl>
