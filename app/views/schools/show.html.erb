<div class="page-header">
  <%= link_to schools_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_school_path(@school), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show school</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @school.name %></dd>

  <dt>Address:</dt>
  <dd><%= @school.address %></dd>

  <dt>City:</dt>
  <dd><%= @school.city %></dd>

  <dt>State:</dt>
  <dd><%= @school.state %></dd>

  <dt>Zip:</dt>
  <dd><%= @school.zip %></dd>

  <dt>Maplink:</dt>
  <dd><%= @school.maplink %></dd>

  <dt>Type:</dt>
  <dd><%= @school.stype %></dd>

  <dt>Grades:</dt>
  <dd><%= @school.grades %></dd>

  <dt>Website:</dt>
  <dd><%= @school.website %></dd>

    <dt>Full-Size Logo:</dt>
    <dd><%= image_tag(@school.logo.url) if @school.logo? %></dd>

    <dt>Large Logo:</dt>
    <dd><%= image_tag(@school.logo.large.url) if @school.logo? %></dd>

    <dt>Medium Logo:</dt>
    <dd><%= image_tag(@school.logo.medium.url) if @school.logo? %></dd>

    <dt>Thumb Logo:</dt>
    <dd><%= image_tag(@school.logo.thumb.url) if @school.logo? %></dd>

    <dt>Small Logo:</dt>
    <dd><%= image_tag(@school.logo.small.url) if @school.logo? %></dd>

</dl>
