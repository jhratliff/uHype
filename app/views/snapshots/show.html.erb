<div class="page-header">
  <%= link_to snapshots_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_snapshot_path(@snapshot), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show snapshot</h1>
</div>

<dl class="dl-horizontal">
  <dt>Url:</dt>
  <dd><%= @snapshot.URL %></dd>

  <dt>Like count:</dt>
  <dd><%= @snapshot.like_count %></dd>

  <dt>Unlike count:</dt>
  <dd><%= @snapshot.unlike_count %></dd>

  <dt>Flag count:</dt>
  <dd><%= @snapshot.flag_count %></dd>

  <dt>User:</dt>
  <dd><%= @snapshot.user %></dd>

  <dt>Full-Size Photo:</dt>
  <dd><%= image_tag(@snapshot.photo.url) if @snapshot.photo? %></dd>

  <dt>Large Photo:</dt>
  <dd><%= image_tag(@snapshot.photo.large.url) if @snapshot.photo? %></dd>

  <dt>Medium Photo:</dt>
  <dd><%= image_tag(@snapshot.photo.medium.url) if @snapshot.photo? %></dd>

  <dt>Thumb Photo:</dt>
  <dd><%= image_tag(@snapshot.photo.thumb.url) if @snapshot.photo? %></dd>

  <dt>Small Photo:</dt>
  <dd><%= image_tag(@snapshot.photo.small.url) if @snapshot.photo? %></dd>

</dl>
