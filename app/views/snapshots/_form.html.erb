<%= form_for(@snapshot, :html => { :class => "form-horizontal" , :multipart => true}) do |f| %>
  <% if @snapshot.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@snapshot.errors.count, "error") %> prohibited this snapshot from being saved:</h4>

      <ul>
      <% @snapshot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.label :URL, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :URL, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :photo, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :photo, :class => "form-control" %>
        <%= f.hidden_field :photo_cache %>
      </div>
    </div>
  <div class="form-group">
    <%= f.label :like_count, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :like_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unlike_count, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :unlike_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :flag_count, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :flag_count, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
