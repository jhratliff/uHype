<div class="page-header">
  <%= link_to new_snapshot_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Snapshot
  <% end %>
  <h1>Listing snapshots</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Thumb</th>
        <th>Url</th>
            <th>Like count</th>
            <th>Unlike count</th>
            <th>Flag count</th>
            <th>User</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @snapshots) do |snapshot| %>
            <td><%= image_tag(snapshot.photo.thumb.url) if snapshot.photo? %></td>
            <td><%= snapshot.URL %></td>
            <td><%= snapshot.like_count %></td>
            <td><%= snapshot.unlike_count %></td>
            <td><%= snapshot.flag_count %></td>
            <td><%= snapshot.user %></td>
            <td><%= link_to 'Show', snapshot %></td>
        <td><%= link_to 'Edit', edit_snapshot_path(snapshot) %></td>
        <td><%= link_to 'Destroy', snapshot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
